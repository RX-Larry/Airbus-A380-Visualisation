{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "data/A380_deliveries.csv"
    },
    "title": "A380 deliveries",
    "width": {"step": 40},
    "height": 200,
    "layer": [
      {"mark": "bar"},
      {
        "mark": {
          "type": "text",
          "align": "center",
          "yOffset": -3,
          "xOffset": 20,
          "fontSize": 10
        },
        "encoding": {
          "text": {"field": "deliveries", "type":"ordinal"},
          "color": {
            "value": "black"
          }
        }
      }
    ],
    "encoding": {
      "x": {
        "title": "Year",
        "field": "start_year",
        "type": "ordinal",
        "scale": {"type": "point", "padding": 0}
      },
      "x2": {"field": "end_year"},
      "y": {
        "title": "Cumulative delieveries",
        "field": "deliveries",
        "type": "quantitative"
      },
      "color": {"value": "#05b106"},
      "tooltip": [
        {"field": "start_year", "type": "nominal"},
        {"field": "end_year", "type": "nominal"},
        {"field": "deliveries", "type": "quantitative"}
      ]
    }
  }