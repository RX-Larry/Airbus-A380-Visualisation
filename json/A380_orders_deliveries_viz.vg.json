{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": {"step": 40},
    "height": 300,
    "title": "A380 Cumulative Orders & Deliveries",
    "layer": [
        {
            "data": {
                "url": "data/A380_orders.csv"
              },
              "title": "A380 orders",
              "width": {"step": 40},
              "height": 200,
              "layer": [
                {"mark": "bar"},
                {
                  "mark": {
                    "type": "text",
                    "align": "center",
                    "yOffset": -10,
                    "xOffset": 20,
                    "fontSize": 10
                  },
                  "encoding": {
                    "text": {"field": "orders", "type":"quantitative"},
                    "color": {
                      "value": "black"
                    }
                  }
                }
              ],
              "encoding": {
                "x": {
                  "title": "Year",
                  "field": "start_year",
                  "type": "ordinal",
                  "scale": {"type": "point", "padding": 0},
                  "axis": {"labelAngle": 0}
                },
                "x2": {"field": "end_year"},
                "y": {
                  "title": "",
                  "field": "orders",
                  "type": "quantitative"
                },
                "color": {"value": "#b3cbfa"},
                "tooltip": [
                  {"field": "start_year", "type": "nominal"},
                  {"field": "end_year", "type": "nominal"},
                  {"field": "orders", "type": "quantitative"}
                ]
              }
        },
        {
            "data": {
                "url": "data/A380_deliveries_part1.csv"
              },
              "title": "A380 deliveries",
              "width": {"step": 40},
              "height": 200,
              "layer": [
                {"mark": "bar"},
                {
                  "mark": {
                    "type": "text",
                    "align": "center",
                    "yOffset": -6,
                    "xOffset": 20,
                    "fontSize": 10
                  },
                  "encoding": {
                    "text": {"field": "deliveries", "type":"quantitative"},
                    "color": {
                      "value": "black"
                    }
                  }
                }
              ],
              "encoding": {
                "x": {
                  "title": "Year",
                  "field": "start_year",
                  "type": "ordinal",
                  "scale": {"type": "point", "padding": 0},
                  "axis": {"labelAngle": 0}
                },
                "x2": {"field": "end_year"},
                "y": {
                  "title": "",
                  "field": "deliveries",
                  "type": "quantitative"
                },
                "color": {"value": "#05b106"},
                "tooltip": [
                  {"field": "start_year", "type": "nominal"},
                  {"field": "end_year", "type": "nominal"},
                  {"field": "deliveries", "type": "quantitative"}
                ]
            }
        },
        {
            "data": {
                "url": "data/A380_deliveries_part2.csv"
              },
              "title": "A380 deliveries",
              "width": {"step": 40},
              "height": 200,
              "layer": [
                {"mark": "bar"},
                {
                  "mark": {
                    "type": "text",
                    "align": "center",
                    "yOffset": 5,
                    "xOffset": 20,
                    "fontSize": 10
                  },
                  "encoding": {
                    "text": {"field": "deliveries", "type":"quantitative"},
                    "color": {
                      "value": "black"
                    }
                  }
                }
              ],
              "encoding": {
                "x": {
                  "title": "Year",
                  "field": "start_year",
                  "type": "ordinal",
                  "scale": {"type": "point", "padding": 0},
                  "axis": {"labelAngle": 0}
                },
                "x2": {"field": "end_year"},
                "y": {
                  "title": "",
                  "field": "deliveries",
                  "type": "quantitative"
                },
                "color": {"value": "#05b106"},
                "tooltip": [
                  {"field": "start_year", "type": "nominal"},
                  {"field": "end_year", "type": "nominal"},
                  {"field": "deliveries", "type": "quantitative"}
                ]
              }
        }
    ]
  }