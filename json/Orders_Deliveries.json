{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": {"step": 40},
    "height": 400,
    "layer": [
        {
            "data": {
                "values": [
                    {"year": "2019", "y": "0", "description": ""},
                    {"year": "2019", "y": "400", "description": "COVID-19"}
                ]
            },
            "encoding": {
                "x": {"field": "year", "type": "ordinal"},
                "y": {"field": "y", "type": "quantitative"},
                "color": {"value": "darkgrey"}
            },
            "layer": [
                {"mark": {"type": "line", "strokeDash": [5,8]}},
                {
                    "mark": {
                        "type": "text", "dy": -10
                    },
                    "encoding": {
                        "text": {"field": "description", "type": "nominal"},
                        "tooltip": [
                            {"field": "year", "type": "ordinal"},
                            {"field": "description", "type":"nominal"}
                        ]
                    }
                }         
            ]
        },
        {
            "data": {
                "url": "data/A380_orders.csv"
              },
              "width": {"step": 40},
              "height": 400,
              "layer": [
                {"mark": "bar"},
                {
                  "mark": {
                    "type": "text",
                    "align": "center",
                    "yOffset": -10,
                    "xOffset": 20,
                    "fontSize": 10
                  },
                  "encoding": {
                    "text": {"field": "orders", "type":"quantitative"},
                    "color": {
                      "value": "black"
                    }
                  }
                }
              ],
              "encoding": {
                "x": {
                  "title": "Year",
                  "field": "start_year",
                  "type": "ordinal",
                  "scale": {"type": "point", "padding": 0},
                  "axis": {"labelAngle": 0, "grid": false}
                },
                "x2": {"field": "end_year"},
                "y": {
                  "title": "",
                  "field": "orders",
                  "type": "quantitative",
                  "scale": {
                      "domain": [0, 450]
                  },
                  "axis": {"grid": false}
                },
                "color": {"value": "#b3cbfa"},
                "tooltip": [
                  {"field": "start_year", "type": "nominal"},
                  {"field": "end_year", "type": "nominal"},
                  {"field": "orders", "type": "quantitative"}
                ]
              }
        },
        {
