{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": {"step": 40},
    "height": 400,
    "layer": [
        {
            "data": {
                "url": "data/A380_orders.csv"
              },
              "width": {"step": 40},
              "height": 400,
              "layer": [
                {"mark": "bar"},
                {
                  "mark": {
                    "type": "text",
                    "align": "center",
                    "yOffset": -10,
                    "xOffset": 20,
                    "fontSize": 10
                  },
                  "encoding": {
                    "text": {"field": "orders", "type":"quantitative"},
                    "color": {
                      "value": "black"
                    }
                  }
                }
              ],
              "encoding": {
                "x": {
                  "title": "Year",
                  "field": "start_year",
                  "type": "ordinal",
                  "scale": {"type": "point", "padding": 0},
                  "axis": {"labelAngle": 0, "grid": false}
                },
                "x2": {"field": "end_year"},
                "y": {
                  "title": "",
                  "field": "orders",
                  "type": "quantitative",
                  "scale": {
                      "domain": [0, 400]
                  },
                  "axis": {"grid": false}
                },
                "color": {"value": "rgb(230,159,0)"},
                "tooltip": [
                  {"field": "start_year", "type": "nominal"},
                  {"field": "end_year", "type": "nominal"},
                  {"field": "orders", "type": "quantitative"}
                ]
              }
        },
